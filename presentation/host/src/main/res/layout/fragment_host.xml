<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tsci.host.HostFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerViewHost"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_graph_host" />

    <View
        android:id="@+id/viewBottomNavigationMenuTopStroke"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_jungle_green_10"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationMenu" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationMenu"
        style="@style/PlantApp.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_92"
        app:itemIconTint="@color/bottom_navbar_menu_tint"
        app:itemTextColor="@color/bottom_navbar_menu_tint"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_navigation" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabHostIdentifyPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_crayola"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_identify"
        app:backgroundTint="@color/ufo_green"
        app:borderWidth="4dp"
        app:elevation="8dp"
        app:fabCustomSize="66dp"
        app:layout_constraintBottom_toBottomOf="@id/viewBottomNavigationMenuTopStroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewBottomNavigationMenuTopStroke"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Rounded"
        app:tint="@android:color/white" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupBottomNavigationBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="bottomNavigationMenu,viewBottomNavigationMenuTopStroke,fabHostIdentifyPlant"/>

</androidx.constraintlayout.widget.ConstraintLayout>