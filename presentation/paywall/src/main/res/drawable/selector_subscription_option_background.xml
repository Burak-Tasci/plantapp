<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">

        <shape>
            <corners android:radius="@dimen/radius_14dp"/>
            <stroke android:width="1.5dp" android:color="@color/green_crayola" />
            <gradient android:endColor="@color/green_crayola_24" android:startColor="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <corners android:radius="@dimen/radius_14dp"/>
            <stroke android:width="0.5dp" android:color="@color/white_30" />
            <solid android:color="@color/white_5"/>
        </shape>
    </item>

</selector>